= f.fields_for @receiver do |u|
  .row
    .form-group.col-6.pr-1
      / = f.label :name, 'Имя'
      = u.text_field :name, class: 'form-control', placeholder: 'Имя', required: true
    .form-group.col-6.pl-1
      / = f.label :phone, 'Телефон'
      = u.telephone_field :phone, class: 'form-control', placeholder: 'Телефон', required: true
    .form-group.col-12#slider
      = u.check_box :call_receiver
      = u.label :call_receiver, 'Узнать адрес у получателя', class: 'd-flex align-items-center'
