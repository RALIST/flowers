
= f.fields_for @user do |u|
  .row
    .form-group.col-6.pr-1
      / = f.label :name, 'Имя'
      = u.text_field :name, value: (current_user.name if current_user), class: 'form-control', placeholder: 'Имя', required: true
    .form-group.col-6.pl-1
      / = f.label :phone, 'Телефон'
      = u.telephone_field :phone, value: (current_user.phone if current_user), class: 'form-control', placeholder: 'Телефон', required: true
