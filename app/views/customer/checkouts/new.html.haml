= form_for @checkout do |f|
  .container.my-4
    .row
      .col-12
        %ul.nav.nav-tabs.justify-content-center.nav-fill#checkout-menu
          %li.nav-item
            = link_to '#card', data:{toggle: 'tab'}, class: 'nav-link active' do
              Адрес
              %i.fa.fa-chevron-right.ml-2
          %li.nav-item
            = link_to '#address', data:{toggle: 'tab'}, class: 'nav-link' do
              Опции
              %i.fa.fa-chevron-right.ml-2
          %li.nav-item
            .nav-link Итог
    .row.my-3
      .tab-content.col-sm-12.col-xs-12.col-lg-8
        .tab-pane#card.active
          %h3
            Информация для доставки
            %hr.my-1
          .my-3
            .row
              .col-12
                %ul.nav.nav-pills.small
                  %li.nav-item
                    %label.btn.btn-outline-primary.btn-sm.active{data: {toggle: 'tab', target: '#send'}}
                      %span Доставка
                      = radio_button_tag :delivery, :send, true, class: 'toggle'
                  %li.nav-item
                    %label.btn.btn-outline-primary.btn-sm.ml-1{data: {toggle: 'tab', target: '#self'}}
                      %span Самовывоз
                      = radio_button_tag :delivery, :self, true, class: 'toggle'
            .row
              .tab-content.col-12
                .tab-pane.active#send
                  .row
                    .col-12#sender
                      .my-2
                        %strong
                          Отправитель
                      = render partial: 'user_form', locals: {f: f}
                    .col-12#reciever
                      .my-2
                        %strong
                          Получатель
                      = render partial: 'receiver_form', locals: {f: f}
                      = render partial: 'address_form', locals: {f: f}
                .tab-pane.collapse#self
                  .row
                    .my-2.col-12
                      = render partial: 'user_form', locals: {f: f}
            .row
              .h5.col-12 Дата и время
              .form-group.col-12
                .row.align-items-center.justify-content-between
                  .col-6
                    = f.text_field :order_date, class: 'form-control', id: 'datepicker'
                  .col-6.text-center.pl-0
                    = f.time_select :order_time, {ignore_date: true, minute_step: 10}, {class: 'form-control', style: 'max-width: 45%; display: inline;'}
        .tab-pane#address
          .h5.d-flex.align-items-center#card-toggle{data:{toggle: 'collapse', target: '#card-form'}, style: 'cursor: pointer;'}
            %i.fa.fa-toggle-off
            Добавить открытку
          .my-3.collapse#card-form
            = render partial: 'card_form', locals: {f: f}
