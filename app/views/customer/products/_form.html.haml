= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :order_count
    = f.number_field :order_count
  .field
    = f.label :views_count
    = f.number_field :views_count
  .field
    = f.label :references
    = f.text_field :references
  .actions
    = f.submit 'Save'
