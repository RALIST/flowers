= form_for @user do |f|
  .form-group
    = f.text_field :name, label: 'Имя', class: 'form-control', placeholder: 'Имя'
  .form-group
    = f.text_field :last_name, label: 'Имя', class: 'form-control', placeholder: 'Фамилия'
  .form-group
    = f.email_field :email, label: 'Email', class: 'form-control', placeholder: 'Email*', required: true
  .form-group
    = f.password_field :password, label: 'Пароль', class: 'form-control', placeholder: 'Пароль*', required: true
  .form-group
    = f.password_field :password_confirmation, label: 'Пароль', class: 'form-control', placeholder: 'Повторите пароль*', required: true
  .form-group
    = f.submit 'Регистрация', class: 'btn btn-success btn-lg btn-block'

%p
  Уже есть аккаунт?
  = link_to 'Войдите', login_path
