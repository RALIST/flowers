.container#account
  .row
    .account-menu
      %ul.nav.flex-column
        %li.nav-item.text-center
          %h5
            Мой аккаунт
        %hr.my-3
        %li.nav-item
          = link_to  account_path, class: 'd-flex align-items-center' do
            %i.fa.fa-user-o
            Личная информация
        %hr.my-3
        %li.nav-item
          = link_to '#', class: 'd-flex align-items-center' do
            %i.fa.fa-history
            История заказов
        %hr.my-3
        %li.nav-item
          = link_to '#', class: 'd-flex align-items-center' do
            %i.fa.fa-address-card-o
            Адресная книга
    .user-info
      %h4.text-center
        Личная информация
      .col-6
        = form_for @user, url: user_path(@user) do |f|
          .form-group
            =f.label 'Имя'
            = f.text_field :name,  class: 'form-control'
          .form-group
            =f.label 'Фамилия'
            = f.text_field :last_name, class: 'form-control'
          .form-group
            =f.label 'Email'
            = f.email_field :email, class: 'form-control'
          .form-group
            =f.label 'Телефон'
            = f.phone_field :phone, class: 'form-control'
          .form-group
            =f.label 'Пол'
            = f.select :gender, User.genders.keys, {include_blank: true}, class: 'form-control'
          .form-group.text-right
            = f.submit 'Обновить информацию', class: 'btn btn-success'

