.jumbotron-fluid.d-flex.align-items-center
  .container
    .row.justify-content-center
      .form-wrapper.text-center
        %h2.my-2 Войдите
        %hr.my-3
        = form_tag florist_sessions_path, method: :post do |f|
          .form-group
            = email_field_tag :email,'', label: 'Email', class: 'form-control', placeholder: 'Email*', required: true
          .form-group
            = password_field_tag :password,'', label: 'Пароль', class: 'form-control', placeholder: 'Пароль*', required: true
          .form-group
            = submit_tag 'Войти', class: 'btn btn-success btn-lg btn-block'

        %p
          Нет аккаунта?
          = link_to 'Регистрация', florist_signin_path
